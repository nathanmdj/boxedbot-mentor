# BoxedBot Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=boxedbot
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your_private_key_here
-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
# OPENAI_ORG_ID=org-your_organization_id  # Optional - only if you have multiple orgs

# AI Model Configuration
OPENAI_MODEL_SMALL=gpt-4o-mini
OPENAI_MODEL_LARGE=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# PR Analysis Thresholds
SMALL_PR_THRESHOLD=100
MEDIUM_PR_THRESHOLD=500
MAX_COMMENTS_PER_PR=20

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Timeouts (seconds)
GITHUB_API_TIMEOUT=30
OPENAI_API_TIMEOUT=120
WEBHOOK_TIMEOUT=30

# File Processing
MAX_FILE_SIZE_KB=500

# Default Configuration
DEFAULT_REVIEW_LEVEL=standard
DEFAULT_FOCUS_AREAS=security,performance,maintainability